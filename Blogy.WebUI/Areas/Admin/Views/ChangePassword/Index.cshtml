@model ChangePasswordDto


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminUI/Index.cshtml";
}





<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Settings</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="index.html" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="text-secondary">Şifre Değiştir</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white border border-white rounded-10 p-20 mb-4">
        <ul class="ps-0 mb-4 list-unstyled d-flex flex-wrap gap-2 gap-lg-3">
           
            <li>
                <a href="change-password.html" class="btn btn-primary border-primary bg-primary text-white fs-16 fw-normal px-3 px-lg-4">Şifre Değişikliği</a>
            </li>
            
        </ul>

        <form id="password-show-hide" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Eski Şifreniz</label>
                        <div class="form-group">
                            <div class="password-wrapper position-relative password-container">
                                <input type="password" asp-for="CurrentPassword" class="form-control text-secondary password" placeholder="Eski şifreniz girin *">
                                <i style="color: #A9A9C8; font-size: 22px; right: 15px;" class="ri-eye-off-line password-toggle-icon translate-middle-y top-50 position-absolute cursor text-secondary" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Yeni Şifreniz</label>
                        <div class="form-group">
                            <div class="password-wrapper position-relative password-container">
                                <input type="password" asp-for="NewPassword" class="form-control text-secondary password" placeholder="Yeni şifrenizi girin *">
                                <i style="color: #A9A9C8; font-size: 22px; right: 15px;" class="ri-eye-off-line password-toggle-icon translate-middle-y top-50 position-absolute cursor text-secondary" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Yeni Şifre Tekrarı</label>
                        <div class="form-group">
                            <div class="password-wrapper position-relative password-container">
                                <input type="password" asp-for="ConfirmPassword" class="form-control text-secondary password" placeholder="Şifre tekrarını giriniz *">
                                <i style="color: #A9A9C8; font-size: 22px; right: 15px;" class="ri-eye-off-line password-toggle-icon translate-middle-y top-50 position-absolute cursor text-secondary" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>

                    <span class="text-danger" style="font-weight:700">@Html.ValidationSummary()</span>

                </div>

                <div class="col-lg-12">
                    <div class="d-flex gap-2">
                        <button  class="btn btn-primary fw-normal text-white">Şifre Değiştir</button>
                        <a href="/Admin/Category/Index"  class="btn btn-danger fw-normal text-white" >İptal</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>










@model List<AppRole>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Rol Listesi</h1>


<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.Name</th>
            <th>
                <a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a>
            </th>
        </tr>

    }




</table>

<a href="/Admin/Role/CreateRole" class="btn btn-success">Yeni Rol Oluştur</a>

@model UpdateBlogDto
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Blog Güncelleme</h1>

<form method="post">

    <input type="hidden"  asp-for="Id" />


    <div class="form-group">

        <label>Blog Başlığı</label>
        <input class="form-control" type="text" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label>Blog Yazısı</label>
        <textarea class="form-control" type="text" asp-for="Description" rows="6"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label>Ana Fotoğraf Url'i'</label>
        <input class="form-control" type="url" asp-for="CoverImage" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label>1.foto</label>
        <input class="form-control" type="url" asp-for="BlogImage1" />
        <span asp-validation-for="BlogImage1" class="text-danger"></span>

    </div>

    <div class="form-group">

        <label>Blog Kategorisi</label>

        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">

            <option selected>Kategori Seçiniz</option>

        </select>

        <span asp-validation-for="CategoryId" class="text-danger"></span>


    </div>
    <div class="form-group">

        <label>2.foto </label>
        <input class="form-control" type="url" asp-for="BlogImage2" />
        <span asp-validation-for="BlogImage2" class="text-danger"></span>

    </div>


    <button class="btn btn-success mt-2">Güncelle</button>


</form>